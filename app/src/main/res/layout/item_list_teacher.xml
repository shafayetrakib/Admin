<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exam_box_shape"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/txt_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_semibold"
                android:textColor="@color/black_pr"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txt_teacher_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:text="Senior Teacher"
                android:textColor="@color/black_pr"
                android:textSize="18sp" />
        </LinearLayout>

<!--        <ImageView-->
<!--            android:id="@+id/img_btn_delete_teacher"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/blue_btn_bg"-->
<!--            android:backgroundTint="@color/red_pr"-->
<!--            android:padding="7dp"-->
<!--            android:src="@drawable/ic_delete_white" />-->

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black_sc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_teacher_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_regular"
            android:textColor="@color/black_pr"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_btn_call_teacher"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/blue_btn_bg"
            android:padding="7dp"
            android:src="@drawable/ic_phone_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black_sc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_teacher_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_regular"
            android:textColor="@color/black_pr"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_btn_email_teacher"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/blue_btn_bg"
            android:padding="7dp"
            android:src="@drawable/ic_email_white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black_sc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_teacher_course"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_regular"
            android:textColor="@color/black_pr"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_btn_course_teacher"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/blue_btn_bg"
            android:padding="7dp"
            android:src="@drawable/ic_edit" />
    </LinearLayout>

</LinearLayout>